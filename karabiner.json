{
    "title": "Change shift to previous input source",
    "rules": [{
        "description": "Change shift to previous input source if pressed alone",
        "manipulators": [{
            "from": {
                "key_code": "left_shift"
            },
            "to": [{
                "key_code": "left_shift",
                "lazy": true
            }],
            "to_if_alone": [{
                "key_code": "spacebar",
                "modifiers": ["left_control"]
            }],
            "type": "basic"
        }, {
            "from": {
                "key_code": "right_shift"
            },
            "to": [{
                "key_code": "right_shift",
                "lazy": true
            }],
            "to_if_alone": [{
                "key_code": "spacebar",
                "modifiers": ["left_control"]
            }],
            "type": "basic"
        }]
    }]
}
